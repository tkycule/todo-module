%h1 Listing tasks

%table
  %thead
    %tr
      %th User
      %th Title
      %th Memo
      %th Aasm state
      %th
      %th
      %th
      
  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.user
        %td= task.title
        %td= task.memo
        %td= task.aasm_state
        %td= link_to 'Show', task
        %td= link_to 'Edit', edit_task_path(task)
        %td= link_to 'Destroy', task, :method => :delete, :data => { :confirm => 'Are you sure?' }

